
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/dodgerblue"
    >


    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />


    <ImageView
        android:id="@+id/moodIcon"
        android:layout_width="wrap_content"
        android:layout_height="319dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/mood" />

    <TextView
        android:id="@+id/moodTrackerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moodIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Mood Tracker App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/moodDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moodTrackerTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="The idea is simple: every day, you record your mood within the application."
        android:textColor="@color/black"
        />


    <LinearLayout
        android:id="@+id/pageIndicatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/moodDescription"
        android:layout_marginTop="16dp">
    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:background="@color/white"
        />

</RelativeLayout>
